
@{
    ViewBag.Title = "Khôi Phục Mật Khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="container">
        <div class="breadcrumbs-main">
            <ol class="breadcrumb">
                <li><a href="/">Trang Chủ</a></li>
                <li class="active">Khôi Phục Tài Khoản</li>
            </ol>
        </div>
    </div>
</div>
<div class="account">
    <div class="container">
        <div class="account-top heading">
            <h2>TÀI KHOẢN</h2>
        </div>
        <div class="account-main container">
            <div class="col-md-6 account-left container">
                <h3>Khôi Phục Tài Khoản</h3>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="account-bottom">
                        <div class="form-group">
                            <input class="form-control text-box single-line" id="EmailResert" name="EmailResert" type="email" placeholder="nhập email khôi phục" required value="">
                        </div>
               
                        <div class="address">
                            <input type="submit" value="Khôi Phục" style="border-radius: 20px;">
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>